<%- include("partials/headerforall")%>

<div id="job_opportunities">
	<% for(var i=0; i<jobs.length; i++){ %>
		<div id="job_opportunity">
			<p id="job_opportunity_company_name"><%= jobs[i].company_name %></p>
			<p id="job_opportunity_post_available">Post Available: <%= jobs[i].post_available %></p>
			<p id="job_opportunity_dept">Department: <%= jobs[i].dept %></p>
			<p id="job_opportunity_requirements_head">Requirements: <li id="job_opportunity_requirement"><%= jobs[i].requirements[0] %></li></p>
			<% for(var j=1; j<jobs[i].requirements.length; j++){ %>
				<li id="job_opportunity_other_requirements"><%= jobs[i].requirements[j] %></li>
				<br>
			<% } %>
			<p id="job_opportunity_p_for_button">
				<a href="/job_opportunities/<%= jobs[i]._id %>">
					<button id="job_view_button">
						View
					</button>
				</a>
			</p>
		</div>
	<% } %>
</div>

<div id="job_opportunity_trademark">
	<p id="tradeMark">
		Trademark NewNormal 2020. All Rights Reserved
	</p>
	<!-- <p id="createdBy">
		BY KD
	</p> -->
</div>
<script src="/js/fade.ejs"></script>
</body>
</html>